<div class = "container">
<div class="card">
  <div class="card-body">
    <h2><%= @task.title %></h2>

    <ul>
      <p><%= @task.details %></p>
      <p><%= @task.completed %></p>
    </ul>

    <ul>
    <button type="button" class="btn btn-outline-primary"><%= link_to "➕ New task", new_task_path  %></button>
    <button type="button" class="btn btn-outline-primary"><%= link_to "⏎ Back to list", tasks_path %></button>
    <button type="button" class="btn btn-outline-primary"><%= link_to "Edit", edit_task_path %></button>
    <button type="button" class="btn btn-outline-primary"><%= link_to "Delete", task_path(@task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></button>
    </ul>
  </div>
</div>
</div>
